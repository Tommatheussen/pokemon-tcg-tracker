{
  "name": "pokemon-tcg-tracker",
  "description": "Desktop app which keeps track of all collected Pokemon Cards",
  "version": "0.0.1",
  "author": "Tom Matheussen",
  "license": "MIT",
  "main": "main.js",
  "scripts": {
    "postinstall": "install-app-deps",
    "pack": "build --dir",
    "dist": "build --win",
    "ng": "ng",
    "start": "concurrently \"electron .\" \"ng serve\" ",
    "build": "ng build",
    "compile": "ng build --base-href . --prod",
    "release": "compile && build --publish onTagOrDraft"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Tommatheussen/pokemon-tcg-tracker"
  },
  "private": true,
  "dependencies": {
    "@angular-mdl/core": "^4.0.3",
    "@angular/cli": "^1.0.3",
    "@angular/compiler-cli": "^4.1.3",
    "@swimlane/ngx-datatable": "^9.1.0",
    "nedb": "^1.8.0",
    "typescript": "^2.3.2"
  },
  "devDependencies": {
    "@angular/animations": "^4.1.3",
    "@angular/common": "^4.1.3",
    "@angular/compiler": "^4.1.3",
    "@angular/core": "^4.1.3",
    "@angular/flex-layout": "^2.0.0-beta.8",
    "@angular/forms": "^4.1.3",
    "@angular/http": "^4.1.3",
    "@angular/platform-browser": "^4.1.3",
    "@angular/platform-browser-dynamic": "^4.1.3",
    "@angular/router": "^4.1.3",
    "@types/jasmine": "2.5.47",
    "@types/nedb": "^1.8.3",
    "@types/node": "~7.0.18",
    "codelyzer": "~3.0.1",
    "concurrently": "^3.4.0",
    "core-js": "^2.4.1",
    "electron": "^1.6.8",
    "electron-builder": "^17.8.0",
    "rxjs": "^5.4.0",
    "ts-node": "~3.0.4",
    "tslint": "~5.2.0",
    "zone.js": "^0.8.10"
  },
  "build": {
    "appId": "pokemon.tcg.tracker",
    "files": [
      "node_modules/",
      "dist/",
      "main.js",
      "package.json"
    ],
    "win": {
      "target": "nsis"
    }
  }
}
