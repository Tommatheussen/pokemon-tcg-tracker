{
  "name": "pokemon-tcg-tracker",
  "description": "Desktop app which keeps track of all collected Pokemon Cards",
  "version": "0.0.4",
  "author": "Tom Matheussen",
  "license": "MIT",
  "main": "main.js",
  "typings": "./src/typings.d.ts",
  "scripts": {
    "postinstall": "install-app-deps",
    "pack": "build --dir",
    "dist": "build --win",
    "ng": "ng",
    "start": "concurrently \"electron .\" \"cd client && ng serve\" ",
    "build": "ng build",
    "compile": "cd client && ng build --base-href . --prod -op ../build_client",
    "release": "npm run compile && build --publish onTagOrDraft"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Tommatheussen/pokemon-tcg-tracker"
  },
  "private": true,
  "dependencies": {
    "electron-updater": "^1.16.0",
    "js-yaml": "^3.8.4"
  },
  "devDependencies": {
    "electron": "^1.6.8",
    "concurrently": "^3.4.0",
    "electron-builder": "^17.8.0"
  },
  "build": {
    "appId": "pokemon.tcg.tracker",
    "productName": "Pokemon TCG Tracker",
    "files": [
      "build_client/",
      "main.js",
      "package.json",
      "node_modules/"
    ],
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "publish": [
      {
        "provider": "github"
      }
    ]
  }
}
